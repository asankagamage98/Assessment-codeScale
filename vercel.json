{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/app.js"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "functions": {
      "api/**/*.js": {
        "runtime": "nodejs18.x"
      }
    },
    "dependencies": {
      "bcrypt": "^5.1.1",
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "mongoose": "^8.0.4",
      "node-cron": "^3.0.3",
      "nodemailer": "^6.9.8",
      "yup": "^1.3.3"
    }
  }
  